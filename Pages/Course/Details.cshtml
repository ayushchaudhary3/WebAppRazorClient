@page "{id:int}"
@model WebAppRazorClient.Pages.Course.DetailsModel
@{
    ViewData["Title"] = "Course Details";
}
<h1>Course Details</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Course.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Course.Description</dd>
        <dt class="col-sm-2">Credit</dt>
        <dd class="col-sm-10">@Model.Course.Credits</dd>
    </dl>
    <a asp-page="Index" class="btn btn-secondary mt-2">Back to List</a>
</div>