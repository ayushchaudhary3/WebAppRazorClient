@page
@model WebAppRazorClient.Pages.Course.CreateModel
@{
    ViewData["Title"] = "Create Course";
}
<h1>Create Course</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Course.Title"></label>
        <input asp-for="Course.Title" class="form-control" />
        <span asp-validation-for="Course.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course.Description"></label>
        <input asp-for="Course.Description" class="form-control" />
        <span asp-validation-for="Course.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Course.Credits"></label>
        <input asp-for="Course.Credits" class="form-control" type="number" />
        <span asp-validation-for="Course.Credits" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create</button>
    <a asp-page="Index" class="btn btn-secondary mt-2">Back to List</a>
</form>