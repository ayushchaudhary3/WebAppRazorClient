@page
@model WebAppRazorClient.Pages.SwListModel
@{
    ViewData["Title"] = "Sandwich List";
}
<h1>Sandwich List</h1>

@if (User.Identity?.IsAuthenticated ?? false)
{
    <a asp-page="/Create" class="btn btn-success mb-3">Create Sandwich</a>
}
else
{
    <!-- Redirects to Identity login page when user is not authenticated.
         If your login page is at a different path, update asp-area/asp-page accordingly. -->
    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-success mb-3">Create Sandwich</a>
}

<table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sandwich in await Model.SwList)
        {
            <tr>
                <td>@sandwich.Name</td>
                <td>@($"{sandwich.Price:C}")</td>

                <td>
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <form method="post" asp-page-handler="Delete" asp-route-id="@sandwich.Id" class="d-inline">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                        <a asp-page="Edit" asp-route-id="@sandwich.Id" class="btn btn-warning btn-sm">Edit</a>
                    }
                    else
                    {
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-danger">Delete</a>
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-warning btn-sm">Edit</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>