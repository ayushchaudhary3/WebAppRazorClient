@page
@model WebAppRazorClient.Pages.Student.CreateModel
@{
    ViewData["Title"] = "Create Student";
}
<h1>Create Student</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Student.Name"></label>
        <input asp-for="Student.Name" class="form-control" />
        <span asp-validation-for="Student.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Student.Age"></label>
        <input asp-for="Student.Age" class="form-control" />
        <span asp-validation-for="Student.Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Student.Address"></label>
        <input asp-for="Student.Address" class="form-control" />
        <span asp-validation-for="Student.Address" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create</button>
    <a asp-page="Index" class="btn btn-secondary mt-2">Back to List</a>
</form>