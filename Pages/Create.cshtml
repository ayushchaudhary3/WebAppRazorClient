@model WebAppRazorClient.Pages.CreateModel
@{
    ViewData["Title"] = "Create Sandwich";
}

<h1>Create Sandwich</h1>

<form method="post" class="mb-4">
    <div class="mb-3">
        <label asp-for="Sandwich.Name" class="form-label">Name</label>
        <input asp-for="Sandwich.Name" class="form-control" />
        <span asp-validation-for="Sandwich.Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Sandwich.Price" class="form-label">Price</label>
        <input asp-for="Sandwich.Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Sandwich.Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Sandwich</button>
</form>

