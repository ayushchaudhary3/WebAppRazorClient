@page "{id:int}"
@model WebAppRazorClient.Pages.Enrollment.DetailsModel
@{
    ViewData["Title"] = "Enrollment Details";
}
<h1>Enrollment Details</h1>
<div>
    <dl class="row">
        <dt class="col-sm-2">Student Name</dt>
        <dd class="col-sm-10">@Model.Enrollment.StudentName</dd>
        <dt class="col-sm-2">Course Title</dt>
        <dd class="col-sm-10">@Model.Enrollment.CourseTitle</dd>
        <dt class="col-sm-2">Course Credits</dt>
        <dd class="col-sm-10">@Model.Enrollment.CourseCredits</dd>
    </dl>
    <a asp-page="Index" class="btn btn-secondary mt-2">Back to List</a>
</div>