@page "{id:int}"
@model WebAppRazorClient.Pages.Enrollment.DeleteModel
@{
    ViewData["Title"] = "Delete Enrollment";
}
<h1>Delete Enrollment</h1>
<h3>Are you sure you want to delete this enrollment?</h3>
<div>
    <strong>Student Name: @Model.Enrollment.StudentName</strong><br />
    <strong>Course Title: @Model.Enrollment.CourseTitle</strong><br />
    <strong>Course Credits: @Model.Enrollment.CourseCredits</strong><br />
</div>
<form method="post">
    <input type="hidden" asp-for="Enrollment.EnrollmentId" />
    <button type="submit" class="btn btn-danger mt-2">Delete</button>
    <a asp-page="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>